#include<stdio.h>
//function declaration
int sum(long int numbers)
  {
	int remainder,sum=0;
while(numbers)
 {
// calculating the sum of n numbers
	remainder=numbers%10;
	sum=sum+remainder;
	numbers=numbers/10;
 }
	return sum;
  }
